extends layout

block content
  header
    h1 学生宝--学生信息管理系统
  
  nav 
    a(href="/") 首页
    a(href="/student/create") 新增
    a(href="/about") 关于
  
  //- ul 
    li #{student_inf.length}
  main 

    each val in student_inf
      section.student-detail
        h2.student-detail= title
        p.student-name #{val.name}
        p.student-id 学号：#{val.jnuid}
        p.student-cellphone 手机：#{val.cellphone}
        p.student-gender 性别：#{val.gender}
        p.student-birthday 生日：#{val.birthday}
        p.student-address 地址：#{val.address}
        img.student-photo(src="/img/?src=public/images/male.png")
        
        //- 查询到了
        if student_inf.length > 0 
          a.student-delete(href='/student/delete/' + val.jnuid) 删除
        //- 查询到了
        if student_inf.length > 0 
          a.student-update(href='/student/update/' + val.jnuid) 更新
        
    if student_inf.length == 0
      section.student-detail
        p.student-nf404 没找查询到学生！

        
  footer#homefooter 
    p &copy George Donne 2024-2025.